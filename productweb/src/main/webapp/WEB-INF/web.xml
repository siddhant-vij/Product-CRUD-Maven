<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>CreateProductServlet</servlet-name>
    <display-name>CreateProductServlet</display-name>
    <servlet-class>com.product.servlets.CreateProductServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReadProductServlet</servlet-name>
    <display-name>ReadProductServlet</display-name>
    <servlet-class>com.product.servlets.ReadProductServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateProductServlet</servlet-name>
    <display-name>UpdateProductServlet</display-name>
    <servlet-class>com.product.servlets.UpdateProductServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteProductServlet</servlet-name>
    <display-name>DeleteProductServlet</display-name>
    <servlet-class>com.product.servlets.DeleteProductServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CreateProductServlet</servlet-name>
    <url-pattern>/createProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReadProductServlet</servlet-name>
    <url-pattern>/readProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateProductServlet</servlet-name>
    <url-pattern>/updateProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteProductServlet</servlet-name>
    <url-pattern>/deleteProduct</url-pattern>
  </servlet-mapping>
</web-app>
